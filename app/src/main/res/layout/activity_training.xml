                android:layout_height="wrap_content"
                style="@style/NewFontStyle"
                android:layout_weight="1" />

            <TextView
                android:text="Training Data"
                android:id="@+id/text_view_training_elapsed_time_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/NewFontStyle"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp">

            <TextView
                android:text="@string/training_avg_pace_header"
                android:id="@+id/text_view_training_avg_pace_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/NewFontStyle"
                android:layout_weight="1" />

            <TextView
                android:text="Training Data"
                android:id="@+id/text_view_training_avg_pace_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/NewFontStyle"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp">

            <TextView
                android:text="@string/training_best_pace_header"
                android:id="@+id/text_view_training_best_pace_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/NewFontStyle"
                android:layout_weight="1" />

            <TextView
                android:text="Training Data"
                android:id="@+id/text_view_training_best_pace_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/NewFontStyle"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
