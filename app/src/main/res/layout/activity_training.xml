<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrainingActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TableLayout
            android:id="@+id/table_training_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp">

                <TextView
                    android:id="@+id/text_view_training_date"
                    style="@style/NewFontStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="Training Data" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="runTableActivity"
                    android:text="@string/tabel_data_training" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp">

                <TextView
                    android:id="@+id/text_view_training_calories_header"
                    style="@style/NewFontStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/training_calories_header" />

                <TextView
                    android:id="@+id/text_view_training_calories_data"
                    style="@style/NewFontStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Training Data" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp">

                <TextView
                    android:id="@+id/text_view_training_distance_header"
                    style="@style/NewFontStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/training_distance_header" />

                <TextView
                    android:id="@+id/text_view_training_distance_data"
                    style="@style/NewFontStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Training Data" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp">

                <TextView
                    android:id="@+id/text_view_training_avg_rate_header"
                    style="@style/NewFontStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/training_avg_rate_header" />

                <TextView
                    android:id="@+id/text_view_training_avg_rate_data"
                    style="@style/NewFontStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Training Data" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp">

                <TextView
                    android:id="@+id/text_view_training_max_rate_header"
                    style="@style/NewFontStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/training_max_rate_header" />

                <TextView
                    android:id="@+id/text_view_training_max_rate_data"
                    style="@style/NewFontStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Training Data" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp">

                <TextView
                    android:id="@+id/text_view_training_moving_time_header"
                    style="@style/NewFontStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/training_moving_time_header" />

                <TextView
                    android:id="@+id/text_view_training_moving_time_data"
                    style="@style/NewFontStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Training Data" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp">

                <TextView
                    android:id="@+id/text_view_training_elapsed_time_header"
                    style="@style/NewFontStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/training_elapsed_time_header" />

                <TextView
                    android:id="@+id/text_view_training_elapsed_time_data"
                    style="@style/NewFontStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Training Data" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp">

                <TextView
                    android:id="@+id/text_view_training_avg_pace_header"
                    style="@style/NewFontStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/training_avg_pace_header" />

                <TextView
                    android:id="@+id/text_view_training_avg_pace_data"
                    style="@style/NewFontStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Training Data" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp">

                <TextView
                    android:id="@+id/text_view_training_best_pace_header"
                    style="@style/NewFontStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/training_best_pace_header" />

                <TextView
                    android:id="@+id/text_view_training_best_pace_data"
                    style="@style/NewFontStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Training Data" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp">

                <TextView
                    android:id="@+id/text_view_training_avg_cadence_header"
                    style="@style/NewFontStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/training_avg_cadence_header" />

                <TextView
                    android:id="@+id/text_view_training_avg_cadence_data"
                    style="@style/NewFontStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Training Data" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp">

                <TextView
                    android:id="@+id/text_view_training_avg_on_100_m_header"
                    style="@style/TrainingHeaderFontStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/training_avg_on_100_m_header" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp">

                <TextView
                    android:id="@+id/text_view_training_butterfly_header"
                    style="@style/NewFontStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/training_butterfly_header" />

                <TextView
                    android:id="@+id/text_view_training_butterfly_data"
                    style="@style/NewFontStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Training Data" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp">

                <TextView
                    android:id="@+id/text_view_training_backstroke_header"
                    style="@style/NewFontStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/training_backstroke_header" />

                <TextView
                    android:id="@+id/text_view_training_backstroke_data"
                    style="@style/NewFontStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Training Data" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp">

                <TextView
                    android:id="@+id/text_view_training_breaststroke_header"
                    style="@style/NewFontStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/training_breaststroke_header" />

                <TextView
                    android:id="@+id/text_view_training_breaststroke_data"
                    style="@style/NewFontStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Training Data" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp">

                <TextView
                    android:id="@+id/text_view_training_freestyle_header"
                    style="@style/NewFontStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/training_freestyle_header" />

                <TextView
                    android:id="@+id/text_view_training_freestyle_data"
                    style="@style/NewFontStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Training Data" />

            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/text_view_pie_chart_active_zone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pie_chart_active_zone"
            android:layout_marginTop="10dp"
            style="@style/chart_header"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/table_training_layout"
            app:layout_constraintVertical_bias="0.0" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/training_activity_pie_chart"
            android:layout_width="match_parent"
            android:layout_height="620dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_pie_chart_active_zone"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/text_view_bar_chart_heart_rate_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bar_chart_heart_rate_header"
            style="@style/chart_header"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/training_activity_pie_chart"
            app:layout_constraintVertical_bias="0.0" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/training_activity_bar_chart_heart_rate"
            android:layout_width="match_parent"
            android:layout_height="620dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_bar_chart_heart_rate_header"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
