            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp">

            <TextView
                android:text="@string/training_avg_on_100_m_header"
                android:id="@+id/text_view_training_avg_on_100_m_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                style="@style/TrainingHeaderFontStyle"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp">

            <TextView
                android:text="@string/training_butterfly_header"
                android:id="@+id/text_view_training_butterfly_header"
                android:layout_width="wrap_content"
