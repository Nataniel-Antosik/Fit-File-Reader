<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrainingActivity">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/table_training_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp">

            <TextView
                android:text="Training Data"
                android:id="@+id/text_view_training_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/NewFontStyle"
                android:layout_weight="4" />

            <Button
                android:text="@string/tabel_data_training"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp">

            <TextView
                android:text="@string/training_calories_header"
                android:id="@+id/text_view_training_calories_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/NewFontStyle"
                android:layout_weight="1" />

            <TextView
                android:text="Training Data"
                android:id="@+id/text_view_training_calories_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/NewFontStyle"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp">

            <TextView
                android:text="@string/training_distance_header"
                android:id="@+id/text_view_training_distance_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/NewFontStyle"
                android:layout_weight="1" />

            <TextView
                android:text="Training Data"
                android:id="@+id/text_view_training_distance_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/NewFontStyle"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp">

            <TextView
                android:text="@string/training_avg_rate_header"
                android:id="@+id/text_view_training_avg_rate_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/NewFontStyle"
                android:layout_weight="1" />

            <TextView
                android:text="Training Data"
                android:id="@+id/text_view_training_avg_rate_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/NewFontStyle"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp">

            <TextView
                android:text="@string/training_max_rate_header"
                android:id="@+id/text_view_training_max_rate_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/NewFontStyle"
                android:layout_weight="1" />

            <TextView
                android:text="Training Data"
                android:id="@+id/text_view_training_max_rate_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/NewFontStyle"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp">

            <TextView
                android:text="@string/training_moving_time_header"
                android:id="@+id/text_view_training_moving_time_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/NewFontStyle"
                android:layout_weight="1" />

            <TextView
                android:text="Training Data"
                android:id="@+id/text_view_training_moving_time_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/NewFontStyle"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp">

            <TextView
                android:text="@string/training_elapsed_time_header"
