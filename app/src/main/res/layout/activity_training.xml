                style="@style/NewFontStyle"
                android:layout_weight="1" />

            <TextView
                android:text="Training Data"
                android:id="@+id/text_view_training_butterfly_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/NewFontStyle"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp">

            <TextView
                android:text="@string/training_backstroke_header"
                android:id="@+id/text_view_training_backstroke_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/NewFontStyle"
                android:layout_weight="1" />

            <TextView
                android:text="Training Data"
                android:id="@+id/text_view_training_backstroke_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/NewFontStyle"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp">

            <TextView
                android:text="@string/training_breaststroke_header"
                android:id="@+id/text_view_training_breaststroke_header"
                android:layout_width="wrap_content"
